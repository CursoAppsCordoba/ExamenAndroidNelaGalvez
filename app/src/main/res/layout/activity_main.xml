<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cosa.com.examenandroidnelagalvez.MainActivity">

    <Button
        android:id="@+id/botonMainAlta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Alta" />

    <Button
        android:id="@+id/botonMainBaja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/botonMainAlta"
        android:layout_alignStart="@+id/botonMainAlta"
        android:layout_below="@+id/botonMainAlta"
        android:layout_marginTop="53dp"
        android:text="Baja" />

    <Button
        android:id="@+id/botonMainListado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/botonMainBaja"
        android:layout_alignRight="@+id/botonMainBaja"
        android:layout_centerVertical="true"
        android:text="Listado" />

    <Button
        android:id="@+id/botonMainSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botonMainListado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Salir" />
</RelativeLayout>
